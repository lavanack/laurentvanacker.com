{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "imageTemplateName": {
            "type": "string"
        },
        "api-version": {
            "type": "string"
        },
        "svclocation": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('imageTemplateName')]",
            "type": "Microsoft.VirtualMachineImages/imageTemplates",
            "apiVersion": "[parameters('api-version')]",
            "location": "[parameters('svclocation')]",
            "dependsOn": [],
            "tags": {
                "imagebuilderTemplate": "AzureImageBuilderSIG",
                "userIdentity": "enabled"
            },
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "": {}
                }
            },
            "properties": {
                "buildTimeoutInMinutes": 240,
                "vmProfile": {
                    "vmSize": "Standard_D8s_v6",
                    "osDiskSizeGB": 127
                },
                "stagingResourceGroup": "/subscriptions/30c8d9eb-366e-4d2c-a723-95bc688f7c97/resourceGroups/IT_rg-avd-aib-use2-1768578547_win11-25h2-av_47111a23-536e-4607-83bd-e90972fe5809",
                "source": {
                    "type": "PlatformImage",
                    "publisher": "MicrosoftWindowsDesktop",
                    "offer": "Windows-11",
                    "sku": "win11-25h2-avd",
                    "version": "latest"
                },
                "customize": [
                    {
                        "type": "PowerShell",
                        "name": "Timezone Redirection",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/Azure/RDS-Templates/refs/heads/master/CustomImageTemplateScripts/CustomImageTemplateScripts_2024-03-27/TimezoneRedirection.ps1"
                    },
                    {
                        "type": "PowerShell",
                        "name": "Install PowerShellCrossPlatform",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/lavanack/laurentvanacker.com/refs/heads/master/Azure/Azure%20VM%20Image%20Builder/Install-PowerShell.ps1"
                    },
                    {
                        "type": "PowerShell",
                        "name": "Install Putty",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/lavanack/laurentvanacker.com/refs/heads/master/Azure/Azure%20VM%20Image%20Builder/Install-Putty.ps1"
                    },
                    {
                        "type": "PowerShell",
                        "name": "Install WinSCP",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/lavanack/laurentvanacker.com/refs/heads/master/Azure/Azure%20VM%20Image%20Builder/Install-WinSCP.ps1"
                    },
                    {
                        "type": "PowerShell",
                        "name": "Install NotepadPlusPlus",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/lavanack/laurentvanacker.com/refs/heads/master/Azure/Azure%20VM%20Image%20Builder/Install-NotepadPlusPlus.ps1"
                    },
                    {
                        "type": "PowerShell",
                        "name": "Install Visual Studio Code",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/lavanack/laurentvanacker.com/refs/heads/master/Azure/Azure%20VM%20Image%20Builder/Install-VSCode.ps1"
                    },
                    {
                        "type": "WindowsUpdate",
                        "searchCriteria": "IsInstalled=0",
                        "filters": [
                            "exclude:$_.Title -like '*Preview*'",
                            "include:$true"
                        ],
                        "updateLimit": 40
                    },
                    {
                        "type": "PowerShell",
                        "name": "Disable AutoUpdates",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/Azure/RDS-Templates/master/CustomImageTemplateScripts/CustomImageTemplateScripts_2023-07-31/DisableAutoUpdates.ps1"
                    }
                ],
                "distribute": [
                    {
                        "type": "SharedImage",
                        "excludeFromLatest": true,
                        "galleryImageId": "/subscriptions/30c8d9eb-366e-4d2c-a723-95bc688f7c97/resourceGroups/rg-avd-aib-use2-1768578547/providers/Microsoft.Compute/galleries/gal_avd_use2_1768578547/images/win11-25h2-avd-arm-vscode/versions/2026.01.16",
                        "runOutputName": "cgOutputARM",
                        "artifactTags": {
                            "publisher": "MicrosoftWindowsDesktop",
                            "offer": "Windows-11",
                            "sku": "win11-25h2-avd"
                        },
                        "targetRegions": [
                            {
                                "storageAccountType": "Premium_LRS",
                                "name": "EastUS2",
                                "replicaCount": 1
                            }
                        ]
                    }
                ]
            }
        }
    ]
}